<% layout('layout') -%>

<% if(data.length === 0) {%>

    <h1>Search Not Found</h1>
<%} else {%>

  <h3>Results for <%= query %> </h3>
  <div class="container">


  <div class="row">
    <!-- _source is by elastic Search when it replicates -->
    <% for(var i = 0; i < data.length; i++){ %>
      <div class="col-lg-4 col-sm-6">
        <a href="/product/<%= data[i]._source._id %>">
          <div class="thumbnail">
            <img src="<%= data[i]._source.image %>" alt="Product Image">
            <div class="caption">
              <h3> <%= data[i]._source.name %> </h3>
              <p> <%= data[i]._source.category.name %> </p>
              <p>$<%= data[i]._source.price %> </p>
            </div>
          </div>
        </a>
      </div>
    <%}%>
  </div>
  </div>
<%}%>
